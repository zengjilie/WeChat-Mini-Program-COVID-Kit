/* pages/news/news.wxss */
.space{
  width: 100%;
  background:#121212 ;
}
.box{
		width:100%;
		box-sizing: border-box;
		padding: 0px 4px;
		
}
.heading{
  padding: 0px 14px;
  background: #121212;
  margin: auto;
  width: 95%;
	font-family: 'MicrosoftYaHei';
  font-size: 22px;
  line-height: 29px;
	letter-spacing: 1px;
  color: #ffffff;
  position: fixed;
	z-index: 1;
	padding-bottom: 10px;
}

.inner-box{
	text-align: center;
}

.video-box{
	width: 95%;
	margin: 0 auto;
	margin-bottom: 14px;
	/* background-color: #272727; */
	border-radius: 12px;
	
	
}
.video{
	width: 100%;
	height: 210px;
	border-radius: 12px;
	
}
.pbtn{
	height: 50px;
	width: 50px;
	position: absolute;
	top: calc(50% - 25px );
	left: calc(50% - 25px );
	
}
.v-image{
	height: 100%;
	width: 100%;
}
.v-title{
	
	
	margin-top: 4px;
	color:#fff;
	
	font-size: 18px;
	box-sizing: border-box;
	

}
.v-info{

	margin-top: 0px;
	display: flex;
	justify-content: space-between;
	
	padding-top: 10px;
	
}
.m-box{
	display: flex;
	height: 30px;

}
.m-image{
	width: 30px;
	height: 30px;
}
.m-title{
	margin-left: 13px;
	color: #fff;
	line-height: 30px;
}
.m-date{
	color: #fff;
	line-height: 30px;
}