/* pages/question/question.wxss */ 

.heading{
  padding: 0px 14px;
  background: #121212;
  margin: auto;
  margin-bottom: 14px;
  width: 95%;
	font-family: 'MicrosoftYaHei';
  font-size: 22px;
  line-height: 29px;
	letter-spacing: 1px;
  color: #ffffff;
  position: fixed;
  z-index: 1;
}
.box{
  width: 100%;
  background: #121212;
  position: fixed;
  z-index: 1;
  
}
.input{
  width: 95%;
  height: 40px;
  
  margin: 10px auto;
  border-radius: 20px;
  color: #fff;
  background: #272727;
  box-sizing: border-box;
  padding: 0 14px;
  
  /* display: flex;
  flex-direction: column;
  justify-content: space-between; */
  
}

.content{
  margin: auto;
  width: 95%;
	background-color: #272727;
	box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.16);
  border-radius: 15px;	
  box-sizing: border-box;
  padding: 10px 10px;
  margin-bottom: 14px;
}
.q{
  display: flex;
  margin-bottom: 5px;
}
.q-icon{
  width: 26px;
	height: 26px;
	background: #ffffff;
	box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.16);
  border-radius: 13px 13px 13px 0px;
  font-size:16px ;
  font-weight: bold;
  text-align: center;
  line-height: 26px;
  
}

.q-text{
  color: #fff;
  width: 90%;
  margin-left: 10px;
  font-size: 18px;
  
}
.a{
  display: flex;
}
.a-icon{
  width: 26px;
	height: 26px;
	background: #bb86fc;
	box-shadow: 0px 3px 6px 0px rgba(0, 0, 0, 0.16);
  border-radius: 0px 13px 13px 13px;
  font-size:16px ;
  font-weight: bold;
  color: #fff;
  text-align: center;
  line-height: 26px;
}
.a-text{
  color: #fff;
  width: 90%;
  margin-left: 10px;
  display: -webkit-box;
  -webkit-box-orient:vertical;
  text-overflow: ellipsis;
  overflow:hidden;
  opacity: 0.5; 
  font-size:16px ;

}
.end-text{
  color: #fff;
  font-size: 16px;
  margin-top: 20px;
  text-align: center;
  opacity: 0.5;
  margin-bottom: 90px;
}
