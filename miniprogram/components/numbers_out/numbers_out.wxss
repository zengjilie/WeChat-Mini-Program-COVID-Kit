.heading{
  width: 100%;
  padding-top: 14px;
  margin-bottom: 20px;
  margin: auto;
  color: #fff;
  font-size: 18px;
  font-family:MicrosoftYaHei ;
  text-align: center;
}
.container{
  width: 95%;
  height: 280px;
  text-align: center;
  white-space: wrap;
  margin:0 auto;
  padding-top: 14px;
  
}

.box1{
  display: inline-block;
  width: 48%;
	height: 46%;
  margin-bottom: 4%;
  float: left
 
}
.box2{
  display: inline-block;
  width: 48%;
	height: 46%;
  
  margin-bottom: 4%;
