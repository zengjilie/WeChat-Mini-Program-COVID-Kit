.innerbox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  text-align:center;
  width: 100%;
	height: 100%;
	background-color: #272727;
	box-shadow: 0px 4px 9px 0px 
		rgba(0, 0, 0, 0.16);
  border-radius: 16px;
  box-sizing: border-box;
  padding: 15px;
}

.title{
  color: #fff;
  font-size: 16px;
  font-family: 'MicrosoftYaHei';
}

.number{
  color: #fff;
  font-size: 22px;
  letter-spacing: 3px;
  font-family: MicrosoftYaHei;
}

.smallbox{
  display: flex;
  text-align: center;
  justify-content: center;
}

.trend{
	font-size: 14px;
	letter-spacing: 1px;
  color: #ffffff;
}
.arrow{
  margin: auto 2px;
  width: 12px;
	height: 7px;
	
}

