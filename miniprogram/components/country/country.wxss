/* components/country/country.wxss */

.container{
  box-sizing: border-box;
  padding: 30px 12px ;
  width: 95%;
	background-color: #272727;
  border-radius: 24px;
  margin: auto;
  box-shadow: 0px 4px 9px 0px rgba(0, 0, 0, 0.16);
  

}
.heading{
	font-family: MicrosoftYaHei;
	font-size: 18px;
	color: #ffffff;
}
.title-box{
  margin-top: 20px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.title{
 
  color: #fff;
  width: 66px;
  height: 26px;
  font-size: 16px;
  text-align: center;
  border-radius: 13px;
  line-height: 26px;
  font-weight: bold;
}
.title1{
  
  color: #fff;
  width: 70px;
  height: 26px;
  font-size: 16px;
  text-align: center;
  line-height: 26px;
  font-weight: bold;
  border-radius: 13px;
  
}

.innerbox{
  display: flex;
  justify-content: space-between;
}

.text{
  width: 66px;
  height: 26px;
  line-height: 26px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  opacity: 0.7;
}
.text1{ 
  width: 70px;
  height: 26px;
  line-height: 26px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  white-space: nowrap;
  overflow:hidden; 
  text-overflow:ellipsis;
  opacity: 0.7;
}
.text2{
  width: 54px;
  height: 26px;
  line-height: 26px;
  font-size: 16px;
  color: #fff;
  text-align: center;
  opacity: 0.7;
}


.line{
  width: 100%;
  height: 2px;
  background:#2b2b2b ;
}
.page{
  display: flex;
}
.more{
  margin:auto;
  margin-top:10px;
  width: 50px;
  height: 50px;
  color: #fff;
}